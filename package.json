{
  "name": "vim-for-kids",
  "version": "1.0.0",
  "description": "An educational game to teach children VIM movement commands through interactive gameplay",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "lint:errors-only": "eslint src/**/*.js --quiet",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "clean": "rm -rf dist coverage",
    "serve": "python3 -m http.server 8000",
    "build:analyze": "vite build --mode analyze",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "validate": "npm run lint:errors-only && npm run format:check && npm run test:coverage && npm run build",
    "validate:quick": "npm run lint:errors-only && npm run format:check && npm run test",
    "validate:cursors": "node scripts/validate-cursor-positions.js",
    "validate:cursors:report": "node scripts/validate-cursor-positions.js --report",
    "test:cursors": "jest tests/integration/cursorPositionValidation.test.js",
    "commit:help": "./scripts/commit-helper.sh",
    "commit:ai": "./scripts/ai-commit.sh",
    "quality:check": "npm run validate",
    "quality:fix": "npm run lint:fix && npm run format && npm run test",
    "coverage:open": "open coverage/lcov-report/index.html",
    "coverage:check": "npm run test:coverage && echo 'Coverage report generated at coverage/lcov-report/index.html'",
    "coverage:enforce": "npm run test:coverage && echo 'âœ… All coverage thresholds met!'",
    "quality:dashboard": "echo 'ðŸ“Š Quality Dashboard:' && npm run test:coverage && npm run lint",
    "coverage:gaps": "npm run test:coverage -- --verbose",
    "quality:performance": "time npm run validate"
  },
  "keywords": [
    "vim",
    "education",
    "game",
    "hexagonal-architecture",
    "javascript",
    "es6-modules"
  ],
  "author": "VIM for Kids Project",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "terser": "^5.39.2",
    "vite": "^4.4.9"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/main.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "globals": {
      "__DEV__": "readonly",
      "__BUILD_DATE__": "readonly",
      "__GIT_HASH__": "readonly"
    },
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error",
            "info"
          ]
        }
      ],
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error",
      "no-debugger": "error",
      "no-alert": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "glob": "^10.4.5"
  }
}
